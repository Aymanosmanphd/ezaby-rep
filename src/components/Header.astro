---
import Burger from './Burger.astro';
import Nav from './Nav.astro';
const { pageTitle } = Astro.props;
---

<header
	class='h-fit bg-gray-700 text-white flex flex-col gap-2 justify-around pt-1 pb-2 px-5 lg:px-6 z-20'
>
	<div class='flex justify-between items-center'>
		<a href='/' class='text-lg md:text-xl lg:text-2xl arab-txt'>
			قسم طلبيات الفروع
		</a>
		{
			pageTitle?.includes('رئيسية') ||
				pageTitle?.includes('تسجيل الدخول') ||
				pageTitle?.includes('ملاحظات') ||
				pageTitle?.includes('المهام') ? (
				''
			) : (
				<Burger />
			)
		}
	</div>
	<div class='self-end'>
		<Nav />
	</div>
</header>
