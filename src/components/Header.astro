---
import Burger from "./Burger.astro";
import Nav from "./Nav.astro";
const {pageTitle} = Astro.props;
---

<header class="h-fit bg-gray-700 text-white flex flex-col gap-2 justify-around py-1 px-5 lg:px-6 z-20">
  <div class="flex justify-between items-center">   
    <a href="/" class="text-lg md:text-xl lg:text-2xl arab-txt">
      قسم طلبيات الفروع 
    </a>
    {pageTitle?.includes('تسجيل الدخول') || pageTitle?.includes('الرئيسية')  ? '' : <Burger />}

  </div>
  <div class="self-end">
    <Nav />
  </div>
</header>